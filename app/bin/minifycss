#!/usr/bin/env php
<?php

use MatthiasMullie\Minify\CSS;

require __DIR__ . '/../../vendor/autoload.php';

$path = __DIR__ . '/../../public/assets/css/';

$minifier = new CSS();
$minifier->add($path . 'style.css');
$minifier->minify($path . 'style.min.css');

echo 'Success: ' . realpath($path . 'style.css') . ' => ' . realpath($path . 'style.min.css') . PHP_EOL;