#!/usr/bin/env php
<?php

use MatthiasMullie\Minify\JS;

require __DIR__ . '/../../vendor/autoload.php';

$path = __DIR__ . '/../../public/assets/js/';

$minifier = new JS();
$minifier->add($path . 'app.js');
$minifier->minify($path . 'app.min.js');

echo 'Success: ' . realpath($path . 'app.js') . ' => ' . realpath($path . 'app.min.js') . PHP_EOL;